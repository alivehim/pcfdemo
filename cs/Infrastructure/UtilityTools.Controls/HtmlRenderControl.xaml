                    z"            
              Fill="#3A6180"
              Height="600"
              Width="800"
              Stroke="#3A6180"
              Stretch="Fill"
              Margin="10">

        </Path>-->
        
        <!--reusable text-->
        <RichTextBox Grid.Row="1" x:Name="PopupText" Background="Transparent"
                   FontSize="26" Margin="50" 
                   Panel.ZIndex="1" 
                   local:HtmlRichTextBoxBehavior.Text="{Binding Content}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <RichTextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Baidu" Click="MenuItem_Click" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" Command="{Binding RelateToBaiduCommand}" />
                    <MenuItem Header="XXXDictionary" Click="MenuItem_Click" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}" Command="{Binding RelateToDictionaryCommand}" />
                    <MenuItem Header="Copy" Click="Copy_Click"  />
                </ContextMenu>
            </RichTextBox.ContextMenu>
        </RichTextBox>
    </Grid>
    
    <!--animate the user control-->
    <UserControl.Style>
        <Style>
            <Style.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="00:00:01" From="0" To="1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <Trigger Property="FrameworkElement.Visibility" Value="Collapsed">
                    <Setter Property="FrameworkElement.Opacity" Value="0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>
    
</UserControl>
